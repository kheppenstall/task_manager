<form action="/tasks" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name='task[title]' class="form-control" placeholder="Enter title">
  </div>

  <div class="form-group">
    <label>Description</label>
    <textarea name='task[description]' class="form-control"> </textarea><br/>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>