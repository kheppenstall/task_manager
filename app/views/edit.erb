<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li><a href="/tasks">Index</a></li>
  <li class="active">Edit Task</a></li>
</ol>

<div class='page-header'>
   <h1>Edit Task</h1>
</div>

<form action="/tasks/<%= @task.id %>" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="PUT" />
  </div>
  <div class="form-group">
    <label>Title</label>
    <input type='text' name='task[title]' class='form-control' value="<%= @task.title %>"/><br/>
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea name='task[description]' class='form-control'><%= @task.description %></textarea><br/>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>